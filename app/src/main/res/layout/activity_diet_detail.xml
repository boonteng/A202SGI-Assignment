<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_diet_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inti.student.assignment.DietDetail"
    android:weightSum="1">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="0.59">
        <ImageView
            android:id="@+id/diet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            />
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            >
                <TextView
                    android:id="@+id/diet_name"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:text="Diet Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/diet_protein"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Protein"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/diet_calcium"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Calcium"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/diet_carbohydrate"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Carbohydrate"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/diet_fat"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Fat"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/diet_water"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Water"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/diet_vitamin"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Vitamin"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/diet_calories"
            android:layout_marginTop="12dp"
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:text="Calories"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</LinearLayout>

